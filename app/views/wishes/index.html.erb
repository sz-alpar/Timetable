<h1>Listing wishes</h1>

<table>
  <tr>
    <th>To be held</th>
    <th>When</th>
    <th>Important</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @wishes.each do |wish| %>
  <tr>
    <td><%= wish.to_be_held %></td>
    <td><%= wish.when %></td>
    <td><%= wish.important %></td>
    <td><%= link_to 'Show', wish %></td>
    <td><%= link_to 'Edit', edit_wish_path(wish) %></td>
    <td><%= link_to 'Destroy', wish, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

